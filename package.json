{
  "name": "reflect-mcp-connector",
  "version": "0.1.2",
  "description": "Reflect.app MCP connector (Model Context Protocol server).",
  "type": "module",
  "license": "MIT",
  "bin": {
    "reflect-mcp-connector": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "SECURITY.md"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "tsx src/cli.ts",
    "build": "tsup",
    "prepack": "npm run build",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "format:check": "prettier -c .",
    "format": "prettier -w .",
    "test": "vitest run"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "reflect",
    "claude",
    "codex"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.0",
    "dotenv": "^16.4.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/node": "^22.10.2",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.20.0",
    "vitest": "^2.1.8"
  }
}
